<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertidor de grados"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp"
        android:text="C°"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etC"
        app:layout_constraintEnd_toStartOf="@+id/etC"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etC"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Ingrese los grados centígrados"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/etF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="8dp"
        android:text="F°"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/etF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etF"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="77dp"
        android:ems="10"
        android:hint="Ingrese los grados Farenheit"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/btnGC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="33dp"
        android:text="C°"
        app:layout_constraintEnd_toStartOf="@+id/btnGF"
        app:layout_constraintTop_toBottomOf="@+id/etF" />

    <Button
        android:id="@+id/btnGF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="99dp"
        android:text="F°"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnGC"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>